@import './variables'

html
    height 100%

body
    height 100%
    margin 0
    font-family Roboto, -apple-system, BlinkMacSystemFont, Segoe UI, Oxygen, Ubuntu, Cantarell, Fira Sans, Droid Sans, Helvetica Neue, sans-serif
    font-size 20px
    line-height 1.5
    background-color background
    color foreground

    +mobile()
        font-size 16px

h1, h2, h3, h4, h5, h6
    margin 0 0 0.5em 0
    font-weight 400
    line-height 1.2
    text-transform capitalize
    text-decoration-thickness 10%

h1
    font-size 2em
    color yellow

a
    color cyan-bright
    text-decoration-thickness 10%

hr
    background-color tint(background, 5%)
    border none
    display block
    height 2px
    margin 1.5rem 0

.center
    display flex
    justify-content center
    align-items center
    flex-direction column

.full-page
    height calc(100vh - 40px)
    padding 20px

.article
    background-color background
    padding 3rem 1.5rem

.section
    background-color background
    padding 2em 1.5em
    +above(700px)
        padding 3rem 1.5rem

    hr
        margin 1rem 0
        +above(700px)
            margin 1.5rem 0

    &.yellow
        background-color yellow
        color black
        a
            color lighten(yellow-bright, 20%)
        .anchor
            color black
        code
            color black
            background-color yellow-bright
        hr
            background-color yellow-bright

.container
    margin 0 auto

    +above(1100px)
        min-width 1000px
        width 1000px

    +above(1200px)
        min-width 1100px
        width 1100px

    +above(1300px)
        min-width 1200px
        width 1200px

    +above(1400px)
        min-width 1300px
        width 1300px

    &.blog
        .post
            display flex
            flex-direction column
            align-items center

            article
                display flex
                flex-direction column
                align-items flex-start
                max-width 600px
                p
                    margin 10px 0
                ul
                    margin 10px 0
                    li
                        max-width 600px
                .pre-container
                    display flex
                    align-items center
                    position relative
                    width calc(100vw - 20px)
                    left 50%
                    right 50%
                    margin-left calc(-50vw + 10px)
                    margin-right calc(-50vw + 100px)
                    +above(700px)
                        width calc(100vw - 100px)
                        margin-left calc(-50vw + 50px)
                        margin-right calc(-50vw + 50px)
                pre
                    margin 1em auto

.text-align-center
    text-align center

.footnote
    font-style italic
    font-size 0.7em

#sapper
    height 100%
